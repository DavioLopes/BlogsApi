{
  "openapi": "3.0.0",
  "info": {
    "title": "Blogs API",
    "description": "API de criação e manipulação de Post em um serviço de Blog.",
    "contact": {
      "name": "Dávio Lopes Linkedin",
      "url": "https://www.linkedin.com/in/d%C3%A1vio-lopes-719b0b189/"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Servidor da API"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Autenticação do usuário",
        "description": "Permite ao usuário manipular dados do Blog",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/login"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "davioplp@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Validations errors"
          },
          "500": {
            "description": "internal server error"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Cadastro de usuário",
        "description": "Essa rota será responsável por cadastrar um novo usuário",
        "tags": ["Usuário"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              },
              "examples": {
                "user": {
                  "value": {
                    "displayName": "Ayrton Senna",
                    "email": "ayrtonsennap@gmail.com",
                    "password": "123456",
                    "image": "https://sportbuzz.uol.com.br/media/_versions/gettyimages-659224375_widelg.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Validations errors"
          },
          "409": {
            "description": "User already registered"
          },
          "200": {
            "description": "OK"
          }
        }
      },
      "get": {
        "summary": "Busca usuários cadastros",
        "description": "Essa rota será responsável por retornar todos os usuários cadastrados",
        "tags": ["Usuário"],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "user": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "authorization"
      }
    }
  }
}
